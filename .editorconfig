# This indicates that this is the "topmost" level EditorConfig. It will attempt to
#  traverse the filesystem for other editorconfig files otherwise.
root = true

# For now, applying these rules only to JS files
[*.js]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true